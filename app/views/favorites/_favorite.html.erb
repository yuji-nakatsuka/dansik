<% if !current_end_user.nil? %>
<% if @movie.favorited_by?(current_end_user) %>
  <%= link_to movie_favorite_path(current_end_user,@movie), method: :delete, remote: true do %>
   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
   <%end%>
   <%= @movie.favorites.count %> Favorites
<% else %>
  <%= link_to movie_favorites_path(@movie), method: :post, remote: true do %>
  <i class="fa fa-heart-o"></i><%end%>
  <%= @movie.favorites.count %> Favorites
<%end%>
<%else%>
 <%= @movie.favorites.count %> Favorites
<%end%>
